<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_Style" parent="BaseText">
        <item name="android:textSize">@dimen/text_small_and_a_half</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text_Style_2" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="H1" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:textColor">@color/dark</item>
    </style>


    <style name="Text_title" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:paddingBottom">@dimen/small_and_a_half</item>
        <item name="android:paddingTop">@dimen/small_and_a_half</item>
    </style>

    <style name="Body_1" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:textSize">@dimen/text_body_1</item>
    </style>

    <style name="ChipTextAppearance">
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textSize">@dimen/text_small_and_a_half</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_tint</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

</resources>